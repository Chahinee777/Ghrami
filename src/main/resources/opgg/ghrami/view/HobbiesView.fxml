<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx" 
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="opgg.ghrami.view.HobbiesViewController"
           styleClass="root" fitToWidth="true" prefWidth="1200" prefHeight="800">
    
    <VBox spacing="0" style="-fx-background-color: #f0f2f5;">
        
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="30" style="-fx-background-color: white; -fx-padding: 25 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="ðŸŽ¯" style="-fx-font-size: 40;"/>
                    <VBox spacing="2">
                        <Label text="My Hobbies" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1c1e21;"/>
                        <Label text="Track your passions and progress" style="-fx-font-size: 14; -fx-text-fill: #65676b;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <Button text="â† Back to Feed" onAction="#handleBackToDashboard" 
                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 12 25; -fx-font-size: 14; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 12, 0, 0, 4);"/>
            
            <Button text="âž• Add Hobby" onAction="#handleAddHobby"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 12 30; -fx-font-size: 14; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.4), 12, 0, 0, 4);"/>
        </HBox>
        
        <!-- Stats Section -->
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 30 40;">
            <!-- Total Hobbies -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5); -fx-pref-width: 250;">
                <Label text="ðŸ“š" style="-fx-font-size: 40;"/>
                <Label fx:id="totalHobbiesLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                <Label text="Total Hobbies" style="-fx-font-size: 14; -fx-text-fill: #65676b; -fx-font-weight: bold;"/>
            </VBox>
            
            <!-- Total Hours -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5); -fx-pref-width: 250;">
                <Label text="â±ï¸" style="-fx-font-size: 40;"/>
                <Label fx:id="totalHoursLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                <Label text="Hours Practiced" style="-fx-font-size: 14; -fx-text-fill: #65676b; -fx-font-weight: bold;"/>
            </VBox>
            
            <!-- Total Milestones -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5); -fx-pref-width: 250;">
                <Label text="ðŸ†" style="-fx-font-size: 40;"/>
                <Label fx:id="totalMilestonesLabel" text="0 / 0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                <Label text="Milestones Achieved" style="-fx-font-size: 14; -fx-text-fill: #65676b; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
        
        <!-- Main Content Area -->
        <VBox spacing="25" style="-fx-padding: 0 40 40 40;">
            
            <!-- Filter Section -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                <Label text="ðŸ” Filter:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <ComboBox fx:id="categoryFilterCombo" promptText="All Categories" prefWidth="200"
                          style="-fx-background-color: #f0f2f5; -fx-background-radius: 20; -fx-padding: 8 15;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Search hobbies..." prefWidth="300"
                           style="-fx-background-color: #f0f2f5; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-size: 13;"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Hobbies Grid -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;" prefHeight="500">
                <FlowPane fx:id="hobbiesContainer" hgap="20" vgap="20" alignment="TOP_LEFT" style="-fx-padding: 5;">
                    <!-- Hobby cards will be added dynamically -->
                </FlowPane>
            </ScrollPane>
        </VBox>
    </VBox>
</ScrollPane>
